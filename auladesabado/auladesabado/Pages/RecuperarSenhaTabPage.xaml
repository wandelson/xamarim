<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="auladesabado.RecuperarSenhaTabPage">
	<ContentPage.Content>
	<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="CenterAndExpand" Padding="5" BackgroundColor="Gray">
         <StackLayout Orientation="Vertical">
            <Entry x:Name="txtEmail" WidthRequest="200" HeightRequest="50" Placeholder="Digite o e-mail" 
					PlaceholderColor="Navy" TextColor="Red" FontAttributes="Bold" HorizontalTextAlignment="Center" />            
         </StackLayout>
         <StackLayout Orientation="Horizontal">
            <Button x:Name="btnRecuperar" WidthRequest="60" HeightRequest="50" Text="Salvar" BackgroundColor="Blue" TextColor="White"  Clicked="Recuperar_Click"/>
            <Button x:Name="btnCancelar" WidthRequest="70" HeightRequest="30" Text="Cancelar" BackgroundColor="Red" TextColor="White" Clicked="Cancelar_Click"/>
         </StackLayout>
      </StackLayout>

	</ContentPage.Content>
</ContentPage>
