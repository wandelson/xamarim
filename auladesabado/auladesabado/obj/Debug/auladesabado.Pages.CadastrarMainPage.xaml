<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="auladesabado.CadastrarMainPage">
   <ContentPage.ToolbarItems>
      <ToolbarItem Text="Sair" Clicked="Handle_Clicked" />
   </ContentPage.ToolbarItems>
   <ContentPage.Content>
      <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="CenterAndExpand" Padding="5" BackgroundColor="Gray">
         <StackLayout Orientation="Vertical">
            <Entry x:Name="TxtLogin" WidthRequest="200" HeightRequest="50" Placeholder="Digite seu usuário" 
					PlaceholderColor="Navy" TextColor="Red" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            <Entry x:Name="TxtPassword" WidthRequest="200" HeightRequest="50" Placeholder="Digite sua senha"
					PlaceholderColor="Navy" TextColor="Red" FontAttributes="Bold" HorizontalTextAlignment="Center" IsPassword="true" />
         </StackLayout>
         <StackLayout Orientation="Horizontal">
            <Button x:Name="btnCadastrar" WidthRequest="60" HeightRequest="50" Text="Salvar" BackgroundColor="Blue" TextColor="White" Clicked="Cadastrar_Click"/>
            <Button x:Name="btnCancelar" WidthRequest="70" HeightRequest="30" Text="Cancelar" BackgroundColor="Red" TextColor="White" />
         </StackLayout>
      </StackLayout>
   </ContentPage.Content>
</ContentPage>