<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="auladesabado.DadosPage"
	xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
	<ContentPage.Content>
		 <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">         			
		   <maps:Map x:Name="map" WidthRequest="300" HeightRequest="300" IsShowingUser="true"></maps:Map>		   		
            <Entry x:Name="txtLat" WidthRequest="100"  TextColor="Black" />
            <Entry x:Name="txtLong" WidthRequest="200" TextColor="Black" />
			<Entry x:Name="txtTemp" WidthRequest="200" TextColor="Black" />													         	
			<Entry x:Name="txtCountry" WidthRequest="200" TextColor="Black" />		
         </StackLayout>    
	</ContentPage.Content>
</ContentPage>
