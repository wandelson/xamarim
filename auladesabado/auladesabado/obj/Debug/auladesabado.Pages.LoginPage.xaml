<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="auladesabado.LoginPage" Title="Login" BackgroundColor="White">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
		   <Entry x:Name="txtLogin"  Placeholder="Usuario" PlaceholderColor="Silver" TextColor="Black" BackgroundColor="White"/>
		   <Entry x:Name="txtSenha"  Placeholder="Senha" PlaceholderColor="Silver" TextColor="Black" BackgroundColor="White" IsPassword="true"/>
			
		   <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
		       <Button x:Name="btnLogin" Clicked="entrarClick"  HorizontalOptions="FillAndExpand" Text="Entrar" BackgroundColor="Red" TextColor="White" ></Button>
		       <Button x:Name="btnCadastrar"  Text="Novo Cadastro" HorizontalOptions="FillAndExpand" BackgroundColor="Gray" TextColor="White"></Button>
			   <Button x:Name="btnRecuperarSenha"   Text="Recuperar senha" HorizontalOptions="FillAndExpand" BackgroundColor="Gray" TextColor="White" Clicked="recuperarClick"></Button>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
